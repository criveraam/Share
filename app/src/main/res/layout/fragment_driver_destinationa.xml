<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackgroundFragment"
    tools:context="com.developer.ti.share.Fragments.DriverDestinationaFragment">

    <LinearLayout
        android:id="@+id/linear_layout_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_destination"
        android:background="@android:color/white"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/circulo"
            android:padding="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Origen"
                android:textColor="@color/colorPrimary"
                android:textSize="8dp"/>
            <TextView
                android:id="@+id/text_view_origin_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:maxLines="1"
                android:textSize="12dp"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/text_view_origin_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
    </LinearLayout>

    <fragment
        android:id="@+id/map_destination"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">
        <LinearLayout
            android:id="@+id/linear_layout_destination_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button_destination"
            android:background="@android:color/white"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/circulo"
                android:padding="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Origen"
                    android:textColor="@color/colorPrimary"
                    android:textSize="8dp"/>
                <TextView
                    android:id="@+id/text_view_destination_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:textSize="12dp"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/text_view_destination_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/button_confirm_route"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="Confirmar ruta"
            android:textColor="@android:color/white"
            android:textAppearance="@style/Widget.Design.AppBarLayout"
            android:textSize="17dp"/>
    </LinearLayout>

</LinearLayout>
